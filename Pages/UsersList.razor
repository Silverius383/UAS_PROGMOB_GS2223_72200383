@page "/users"
@using System.Net.Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@inject HttpClient Http

<PageTitle>Users</PageTitle>

<h1>List</h1>


@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>USERNAME</th>
                <th>EMAIL</th>
                <th>ADDRESS</th>
                <th>PHONE</th>
                <th>WEBSITE</th>
                <th>COMPANY</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.id</td>
                    <td>@user.name</td>
                    <td>@user.username</td>
                    <td>@user.email</td>
                    <td>@user.address</td>
                    <td>@user.phone</td>
                    <td>@user.website</td>
                    <td>@user.company</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Users[]? users;

    protected override async Task OnInitializedAsync()
    {
        users = await Http.GetFromJsonAsync<Users[]>("https://jsonplaceholder.typicode.com/users");
    }

       public class Users{
        public int id { get; set; }

        public string name { get; set; }

        public string username { get; set; }

        public string email { get; set; }

        public double[] address
{
 get

  {
    return address;
  }

set

{
 address=value;
}
}

        public string phone { get; set; }

        public string website { get; set; }

        public double[] company
{
 get

  {
    return company;
  }

set

{
 company=value;
}
}
 }
 
 
}